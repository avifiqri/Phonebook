<div class ="warm">
<p id="notice"><%= notice %></p>

    <div class= "container">
        <div class ="row">

          <div class= "col-md-3"> 
            <div id="contact">
                    <i class='fas fa-plus' style='font-size:36px'></i>
                        <%= link_to 'Buat Contact Baru', new_user_path, style: "font-size: 18px" %> 
                <div class= "form-group">
                    <%= text_field_tag  :search, nil, class: "form-control", placeholder: "Enter -Your search . . ."%>
                </div>                        
                <%= submit_tag 'Searching name', class: "btn btn-primary"%>
                

            </div>       
        </div>
                    <h1>Book Phones  <i class='fas fa-book' style='font-size:36px'></i></h1>

            <div class= "col-md-4 col-md-offset-2 "> 
            <% @users.each do |user| %>
            <div class="warming">
                        
                         <div class="picture">   <%= image_tag user.cover.url if user.cover? %> </div>
                     <p> Name: </p> <h3><%= user.name %></h3></br>

                    <p>Umur: </p> <%= user.age %></br>
                    <p>Number: </p><%= user.number %></br>
                    <p>Alamat: </p><%= truncate user.address, length: 50 %></br>
                        <i class='far fa-eye' style='font-size:18px'></i>
                            <%= link_to 'Lihat Detail', user,style: "font-size: 18px;" %>

                    </div>
              <% end %> 
                    <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
            </div>
        </div>   
    </div>
</div>
